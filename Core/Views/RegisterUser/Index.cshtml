@model UserRegister
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>YazYazabilirsen</title>

    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/admin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/admin/css/animate.css" rel="stylesheet">
    <link href="~/admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">YY+</h1>

            </div>
            <h3>Kaydol</h3>
            <p>Çalışırken görmek için hesap oluşturun.</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-info"></span>
                    <input type="text" class="form-control" asp-for="@Model.nameSurname" placeholder="Ad soyad">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-info"></span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="@Model.UserName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-info"></span>
                    <input type="email" class="form-control" placeholder="Mail" asp-for="@Model.Mail">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-info"></span>
                    <input type="password" class="form-control" placeholder="Parola" asp-for="@Model.Password">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-info"></span>
                    <input type="password" class="form-control" placeholder="Parola Tekrar" asp-for="@Model.ConfirmPassword">
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Şartları ve politikayı kabul ediyorum. </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>
                <p class="text-muted text-center"><small>Zaten bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index/">Giriş yap</a>
                <div class="text-info" asp-validation-summary="ModelOnly"></div>
            </form>
            <p class="m-t"> <small>YazYazabilirsen &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/admin/js/jquery-3.1.1.min.js"></script>
    <script src="~/admin/js/popper.min.js"></script>
    <script src="~/admin/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/admin/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>

